# Environment
NODE_ENV=development

# Server
PORT=3001
HOST=localhost

# Database
DATABASE_URL="file:./dev.db"
# For PostgreSQL: DATABASE_URL="postgresql://username:password@localhost:5432/dota_spammer_finder"

# Redis (Optional)
REDIS_URL="redis://localhost:6379"

# OpenDota API
OPENDOTA_API_URL="https://api.opendota.com/api"
OPENDOTA_RATE_LIMIT=60

# Official Dota 2 API
DOTA2_API_URL="https://www.dota2.com/datafeed"

# CORS
CORS_ORIGIN="http://localhost:3000"

# Logging
LOG_LEVEL=debug

# Cron Jobs
DATA_UPDATE_CRON="0 */6 * * *"  # Every 6 hours

# Cache
CACHE_TTL=3600  # 1 hour in seconds